# Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://constellation:constellation@localhost:5432/constellation_hub
POSTGRES_USER=constellation
POSTGRES_PASSWORD=constellation
POSTGRES_DB=constellation_hub

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Set to true to disable auth for local development
AUTH_DISABLED=false

# JWT secret key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production-use-a-real-secret-key

# JWT token expiration in minutes
JWT_EXPIRE_MINUTES=60

# Optional: Admin API key for service-to-service calls
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=

# =============================================================================
# SERVICE URLS (for inter-service communication)
# =============================================================================
CORE_ORBITS_URL=http://core-orbits:8001
ROUTING_URL=http://routing:8002
GROUND_SCHEDULER_URL=http://ground-scheduler:8003
AI_AGENTS_URL=http://ai-agents:8004

# =============================================================================
# TLE FEEDS
# =============================================================================
# How often to refresh TLE data (hours)
TLE_REFRESH_INTERVAL_HOURS=6

# CelesTrak base URL
CELESTRAK_BASE_URL=https://celestrak.org

# Space-Track credentials (optional, for enhanced TLE data)
SPACETRACK_USERNAME=
SPACETRACK_PASSWORD=

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# Options: mock, openai, anthropic, local
LLM_PROVIDER=mock
LLM_API_KEY=
LLM_MODEL=gpt-4

# Scheduler strategy: heuristic, ml
SCHEDULER_STRATEGY=heuristic

# =============================================================================
# OBSERVABILITY
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: json (for production), text (for local dev)
LOG_FORMAT=text

# Enable Prometheus metrics endpoint
METRICS_ENABLED=true

# =============================================================================
# FRONTEND
# =============================================================================
VITE_API_BASE_URL=http://localhost:8001
VITE_CORE_ORBITS_URL=http://localhost:8001
VITE_ROUTING_URL=http://localhost:8002
VITE_GROUND_SCHEDULER_URL=http://localhost:8003
VITE_AI_AGENTS_URL=http://localhost:8004

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=true
